{
    "manifest_version": 2,
    "name": "Check URL",
    "version": "0.1",
    "icons": {
        "16": "images/logo_16.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },
    "permissions": ["background","tabs","http://*/","https://*/"],
    "browser_action": {
        "default_icon": {
            "16": "images/logo_16.png",
            "48": "images/logo_48.png",
            "128": "images/logo_128.png"
        },
        "default_title": "Check URL",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    }
}
